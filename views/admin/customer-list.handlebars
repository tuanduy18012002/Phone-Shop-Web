<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-4">Danh sách Khách hàng</h6>
                    <a href="./khach-hang.html">Thêm khách hàng</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Tên đăng nhập</th>
                                <th scope="col">Mật khẩu</th>
                                <th scope="col">Họ tên</th> 
                                <th scope="col">Email</th>
                                <th scope="col">SDT</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">Chỉnh sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each user}}
                            <tr>
                                <td>{{this.account}}</td>
                                <td>{{this.password}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.address}}</td>
                                <td><a class="btn btn-sm btn-primary" href="user/{{this.slug}}">Edit</a></td>
                            </tr>
                            {{/user}}
                        </tbody>
                    </table>
                    <div class="pagination">
                        {{#if pre_page}}
                            <a href="/admin/product?page={{pre_page}}">&laquo;</a>
                        {{/if}}
                        {{#each pages}}
                            <a href="/admin/product?page={{this.value}}">{{this.value}}</a>
                        {{/each}}
                        {{#if next_page}}
                            <a href="/admin/product?page={{next_page}}">&raquo;</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->